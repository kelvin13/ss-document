import DOM 

extension RSS.Element 
{
    /// An RSS attribute.
    @frozen public 
    struct Attribute 
    {
        public 
        var value:DOM.Value<Anchor>

        @inlinable public 
        init(_ value:DOM.Value<Anchor>)
        {
            self.value = value
        }
        @inlinable public 
        init(anchor:Anchor)
        {
            self.init(.anchor(anchor))
        }
    }
}
@matrix(
    __attribute__: 
    [
        domain,
        isPermaLink,
        length,
        type,
        url,
        version,
    ],
    __name__:
    [
        "domain",
        "isPermaLink",
        "length",
        "type",
        "url",
        "version",
    ])
extension RSS.Element.Attribute 
{
    /// Returns an instance of the RSS `\(__name__)` attribute, with no associated value.
    @inlinable public static 
    var __attribute__:Self 
    {
        self.init(.init(escaped: __name__))
    }
    /// Returns an instance of the RSS `\(__name__)` attribute, with the given string value.
    @inlinable public static 
    func __attribute__<S>(_ string:S) -> Self where S:StringProtocol 
    {
        self.init(.init(key: __name__, escaped: string))
    }
}